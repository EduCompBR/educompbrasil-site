        {{artigo1_titulo}}

        <!-- Badges: Tipo de trabalho -->
        {{#if artigo1_artigo_pesquisa}}
        <span class="badge bg-primary" style="color: white;">
          Artigos de Pesquisa
        </span>
        {{/if}}

        {{#if artigo1_ensaio}}
        <span class="badge bg-light" style="color: black;">
          Ensaios
        </span>
        {{/if}}

        {{#if artigo1_relato_experiencia}}
        <span class="badge bg-danger" style="color: white;">
          Relatos de Experiência
        </span>
        {{/if}}

        {{#if artigo1_curriculo}}
        <span class="badge bg-warning" style="color: black;">

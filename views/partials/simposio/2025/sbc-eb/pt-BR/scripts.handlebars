<script>
  const carrossel = document.getElementById("carrossel-jf")
  const imagens = [
    '/img/simposio/2025/comum/jf/cidade/vista-parcial.jpg',
    '/img/simposio/2025/comum/jf/cidade/cine-theatro-prefeitura.jpg',
    '/img/simposio/2025/comum/jf/ufjf/aerea-praca-civica.jpg',
    '/img/simposio/2025/comum/jf/cidade/estacao.jpg',
  ]

  let indice = 0

  function trocarImagem() {
    indice = (indice + 1) % imagens.length
    carrossel.style.backgroundImage = `url(${imagens[indice]})`
    carrossel.style.animation = "none"
    carrossel.offsetHeight
    carrossel.style.animation = "zoomOut 30s ease-out forwards"
  }

  // Troca de imagem a cada 15 segundos
  setInterval(trocarImagem, 5000)
</script>

<script>
  $("#carrossel-parceiros").carousel({
    interval: 4000,
  })

  $("#carrossel-parceiros .carousel-item").each(function () {
    var minPerSlide = 3
    var next = $(this).next()
    if (!next.length) {
      next = $(this).siblings(":first")
    }
    next.children(":first-child").clone().appendTo($(this))

    for (var i = 0; i < minPerSlide; i++) {
      next = next.next()
      if (!next.length) {
        next = $(this).siblings(":first")
      }

      next.children(":first-child").clone().appendTo($(this))
    }
  })
</script>

<body id="page-top">
  <!-- Navigation -->
  {{> navbar}}

  <header class="bg-default text-dark" style="height: 4rem; margin-top: -4rem">
    <div class="container">
      <div class="row">
        <div class="col-3">
          <img src="/img/banner-chamada-min.jpeg" style="height: 4rem; width: 8rem"/>
        </div>
        <div class="col-9">
          <h3>Simpósio Brasileiro de Educação em Computação</h3>
        </div>
      </div>
      
    </div>
  </header>

  <section id="contato" style="background-color:rgb(221, 232, 243);">
    <div class="container">
      <div class="row">
        <div class="col-lg-8 mx-auto">
          <h2 style="margin-top: -6rem;">Contato</h2>
          <br>
          <form method="POST" action="/simposio/2021/contato/email">
            <div class="form-group">
                <label for="email1">Email</label>
                <input type="email" class="form-control" name="email1" id="email1">
            </div>
            <div class="form-group">
                <label for="assunto1">Assunto</label>
                <input type="text" class="form-control" name="assunto1" id="assunto1">
            </div>
            <div class="form-group">
                <label for="mensagem1">Mensagem</label>
                <textarea class="form-control" name="mensagem1" id="mensagem1" rows="4"></textarea>
            </div>
            <p> <input type="submit" value="Enviar" class="btn btn-primary btn-lg" /> </p>
          </form>
        </div>
      </div>
    </div>
  </section>

  {{> footer}}


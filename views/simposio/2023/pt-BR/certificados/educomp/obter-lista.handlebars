 {{> simposio/2023/pt-BR/inside-header}}

  <section id="datas" style="background-color:rgb(255, 255, 255);">
    <div class="container" style="margin-top: -9em;">
      <div class="row">
        <div class="col-lg-8 mx-auto">
          <h2>
            EduComp 2023<br>
            <small class="text-muted">24 a 29 de abril de 2023</small>
          </h2>
          <br>
          <h3>Lista de Certificados </h3>
          <br>

          {{#each data}}
         {{#if registros}}
           <ul class="list-group">
             <li class="list-group-item list-group-item-primary" style="font-size: x-large;">{{nome}}</li>
             
             {{#each registros as |registro|}}

                 <form method="POST" action="/simposio/2023/certificados/educomp/obter/arquivo">

                   <input name="texto_base" type="hidden" value="{{registro.texto_base}}" />
                   {{#each campos as |campo|}}
                     <input name="{{campo}}" type="hidden" value="{{lookup registro campo}}" />
                   {{/each}}

                   <button type="submit" style="text-align: left;" class="btn btn-light btn-lg btn-block">
                     <i class="fas fa-file-pdf"></i> {{registro.descricao}}
                   </button>
                 </form>
             {{/each}}
           </ul>
         {{/if}}
       {{/each}}

       {{#if mensagem}}
         <div class="alert alert-danger">{{mensagem}}</div>
       {{/if}}


        </div>
            
      </div>
    </div>

  </section>